<!DOCTYPE html>
<html>
  <head>
    <title>ElectronicShowcase</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <nav>
      <ul>
        <li>
          <%= link_to "Home", root_path %>
        </li>
        <li>
          <%= link_to "Politicas de privacidad", privacy_path %>
        </li>
        <li>
          <%= link_to "Terminos y condiciones", legal_path %>
        </li>
        <li>
          <%= link_to "Contacto", new_contact_path %>
        </li>
      </ul>
      <ul>
    <% if user_signed_in? %>
      <li>
        <strong>
          <%= current_user.full_name %>
        </strong> |
        <strong>
          <%= current_user.role %>
        </strong>
      </li>
      <li>
        <%= link_to "Editar perfil", edit_user_registration_path %>
      </li>
      <li>
        <%= button_to "Cerrar sesión", destroy_user_session_path, method: :delete %>
      </ul>
    <% else %>
      <li>
        <%= link_to "Registrate", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Inicia sesión", new_user_session_path %>
      </li>
    <% end %>
  </ul>
    </nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
